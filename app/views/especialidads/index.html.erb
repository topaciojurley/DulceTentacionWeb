<h1>Especialidades</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Detalle</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @especialidads.each do |especialidad| %>
      <tr>
        <td><%= especialidad.nombre %></td>
        <td><%= especialidad.detalle %></td>
        <td><%= link_to 'Mostrar', especialidad %></td>
        <td><%= link_to 'Editar', edit_especialidad_path(especialidad) %></td>
        <td><%= link_to 'Eliminar', especialidad, method: :delete, data: { confirm: 'Seguro de eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Especialidad', new_especialidad_path %>
